---
const {
    title,
    url,
    pubDate,
    description
} = Astro.props

let date = new Date(pubDate);
let formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: '2-digit'
});
---

<div class="post-review-block" data-url={url}>
    <time datetime={pubDate}>{formattedDate}</time>
    <p>{title}</p>
    <div>
        <i>
            {description}
        </i>
    </div>
</div>